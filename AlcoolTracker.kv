<MyAlcoholsPage>:
    name:"alcohols"
    container:container
    Screen:
        orientation: "vertical"
        size: root.height, root.width
        padding: 50
        spacing: 30
        MDCard:
            orientation: "vertical"
            size: root.height, root.width
            Button:
                text: "Retour"
                font_size: 50
                size_hint: (1, 0.1)
                color: (1,1,1,1)
                on_press: app.root.current="home"
            Button:
                text: "Ajouter un Alcool"
                font_size: 50
                size_hint: (1, 0.1)
                color: (1,1,1,1)
                on_press: app.root.current="addalc"
            Button:
                text: "Cliquer pour actualiser"
                font_size: 50
                size_hint: (1, 0.1)
                color: (1,1,1,1)
                on_release: root.update_list()
            Label:
                text:"Cliquez sur la boisson pour supprimer"
                size_hint: (1, 0.1)

            MDScrollView:
                MDList:
                    id: container
    
<Drinks>:
    name:"drinks"
    container:container
    Screen:
        orientation: "vertical"
        size: root.height, root.width
        padding: 50
        spacing: 30
        MDCard:
            orientation: "vertical"
            size: root.height, root.width
            Button:
                text: "Retour"
                font_size: 50
                size_hint: (1, 0.1)
                color: (1,1,1,1)
                on_press: app.root.current="home"
            Button:
                text: "Cliquer pour actualiser"
                font_size: 50
                size_hint: (1, 0.1)
                color: (1,1,1,1)
                on_release: root.on_start()
            Label:
                text:"Cliquez sur la consommation pour supprimer"
                size_hint: (1, 0.1)

            MDScrollView:
                MDList:
                    id: container

<AddDrink>:
    name:'adddrink'
    alcname: alcname
    dosebar:dosebar
    alcvolume: alcvolume
    duration:slider_label
    repas:slider_label_repas
    time:time_label
    date:date_label
    Screen:
        orientation:"vertical"
        MDCard:
            orientation: "vertical"
            padding: 50
            spacing: 30
            
                
            MDTextField:
                multiline: False
                mode: "rectangle"
                hint_text: "Name"
                id: alcname
                halign: 'center'
                size_hint_x: None
                width: 600
                font_size: 60
                pos_hint: {"center_x": 0.5,"center_y": 0.1}


            #mettre time picker
            MDRaisedButton:
                id: time_label
                text: root.set_txttime()
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: root.show_time_picker()

            #datepicker
            MDRaisedButton:
                id: date_label
                text: root.datetext()
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: root.show_date_picker()

            MDLabel:
                text: "Entres la durée de consommation (en min)"
                halign: 'center'
                font_size: 40
                pos_hint: {"center_x": 0.5,"center_y": 0.9}
                size_hint_y:0.5
            MDLabel:
                id: slider_label
                text: "0"
                halign: 'center'
                font_size: 50
                pos_hint: {"center_x": 0.5,"center_y": 0.9}
                size_hint_y:0.1
                italic: True
            Slider:
                id:slider
                min: 0
                max: 120
                step: 5
                orientation: "horizontal"
                on_value: root.slide_it(*args)
                size_hint_y:1
            
            MDLabel:
                text: "Si tu as mangé, entre la consistence de ton repas"
                halign: 'center'
                font_size: 40
                pos_hint: {"center_x": 0.5,"center_y": 0.9}
                size_hint_y:0.5
            MDLabel:
                id: slider_label_repas
                text: "0%"
                halign: 'center'
                font_size: 50
                pos_hint: {"center_x": 0.5,"center_y": 0.9}
                size_hint_y:0.1
                italic: True
            Slider:
                id:slider
                min: 0
                max: 100
                step: 20
                orientation: "horizontal"
                on_value: root.slide_it_meal(*args)
                size_hint_y:1
            Widget:
                size_hint_y: None
                height: 15
            GridLayout:
                cols: 2

                MDLabel:
                    text: "Dose Bar"
                    font_size: 40
                    size_hint_y:0.1

                CheckBox:
                    id: dosebar
                    size_hint_y:0.1
                    on_active:  
                        root.enable_volume()
                        root.bar_click(self, self.active)
                        root.disable_volume()

            MDTextField:
                multiline: False
                mode: "rectangle"
                hint_text: "Volume d'alcool en mL"
                id: alcvolume
                halign: 'center'
                size_hint_x: None
                width: 600
                font_size: 20
                pos_hint: {"center_x": 0.5,"center_y": 0.1}                 

            
            MDRoundFlatButton:
                text: "Valider"
                pos_hint: {'center_x': 0.5}
                size_hint: (None, None)
                font_size: 60
                on_press:
                    root.on_press()
                width: 150
                height: 60

            MDRoundFlatButton:
                text: "Retour"
                pos_hint: {'center_x': 0.5}
                size_hint: (None, None)
                font_size: 40
                on_press:
                    app.root.current = "home"
                width: 150
                height: 60

<AddAlcohol>:
